extends layout

block footer
  script(src='/js/app.js')

block content
  .container
    .col-xs-10.col-xs-offset-1
      h1 Users
      if typeof user != 'undefined'
        table.table.table-striped
          thead
            tr
              th #
              each val, index in user[0]
                th= index
          tbody
            each row, index in user
              tr
                td= (index + 1)
                each cell in row
                  td= cell
      else 
        h3 No user data!
